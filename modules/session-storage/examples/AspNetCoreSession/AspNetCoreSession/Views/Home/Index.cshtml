@model IndexView
@{
    ViewData["Title"] = "Home Page";
}

<h2>Welcome to the Couchbase ASP.NET Session Tutorial Example app.</h2>

<p>The current data in the session is:</p>
<pre>@Model.RawJson</pre>

<h3>@Html.ActionLink("Start a new session","NewSession")</h3>

<div class="row">
    <div class="col-md-3">
        <h2>User</h2>
        <ul>
            <li>@Html.ActionLink("Add basic information to session","AddUserDataToSession","Home")</li>
            <li>@Html.ActionLink("Clear","ClearUserDataInSession","Home")</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Shopping Cart</h2>
        <ul>
            <li>@Html.ActionLink("Add shopping cart to session", "AddShoppingCartDataToSession", "Home")</li>
            <li>@Html.ActionLink("Clear", "ClearShoppingCartDataInSession", "Home")</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Location</h2>
        <ul>
            <li>@Html.ActionLink("Add location information to session", "AddLocationDataToSession", "Home")</li>
            <li>@Html.ActionLink("Clear", "ClearLocationDataInSession", "Home")</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Reporting w/N1QL</h2>
        <ul>
            <li>Currently <strong>@Model.SessionCount</strong> session documents in storage.</li>
            <li>To create more sessions, click "Start a new session" and then any of the "Add" links</li>
            <li>@Html.ActionLink("Recent shopping carts", "ReportRecentShoppingCarts", "Home")</li>
            <li>@Html.ActionLink("Most common shopping cart items", "ReportMostCommonShoppingCartItems", "Home")</li>
        </ul>
    </div>
</div>
